include ../../../blocks/button/button.pug
mixin recall__text(title, subtitle, smallText)
	.offset-md-6.col-6.text-center.col-xl-4.col-lg-5.col-md-6.col-sm-8.col-xs-10.col-10.text-center.pt-3.pt-sm-3
		.m-sm-3.m-1.text-center.p-3
			a#recall_us
			.recall__title= title
			.recall__subtitle= subtitle
			.recall__action.p-2.p-md-3
				+recallus()
			button.btn.btn-link.recall__small-text(type='button', data-toggle='modal', data-target='#exampleModalLong')= smallText
			// Modal
			#exampleModalLong.modal.fade(tabindex='-1', role='dialog', aria-labelledby='exampleModalLongTitle', aria-hidden='true')
				.modal-dialog(role='document')
					.modal-content
						.modal-header
							h5#exampleModalLongTitle.modal-title Modal title
